@model IEnumerable<ForoAutenticacion.Models.Topic>

@{
    ViewData["Title"] = "Lista de Temas";
}

<h2>@ViewData["Title"]</h2>

@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Crear nuevo tema</a>
    </p>
}
else
{
    <p>
        <a asp-area="Identity" asp-page="/Account/Login">Inicia sesión</a> para crear un tema.
    </p>
}

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Título</th>
            <th>Autor</th>
            <th>Fecha</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.AutorEmail</td>
                <td>@item.FechaCreacion.ToString("g")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Ver respuestas</a>
                </td>
            </tr>
        }
    </tbody>
</table>

