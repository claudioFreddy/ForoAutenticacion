@model ForoAutenticacion.Models.Topic

@{
    ViewData["Title"] = "Crear nuevo tema";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Título</label>
        <input asp-for="Titulo" class="form-control" required />
    </div>
    <div class="form-group mt-2">
        <label>Contenido</label>
        <textarea asp-for="Contenido" class="form-control" required></textarea>
    </div>
    <button type="submit" class="btn btn-success mt-3">Publicar</button>
</form>

